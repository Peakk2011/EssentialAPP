{
  "runtimes": {
    "electron": {
      "name": "EssentialAPP",
      "features": ["DefineOS", "desktop-integration"],
      "ui": {
        "titlebar": true,
        "window-controls": true,
        "drag-region": true
      }
    },
    "web": {
      "name": "Web",
      "features": ["CSSweb"],
      "ui": {
        "titlebar": false,
        "window-controls": false,
        "drag-region": false
      }
    }
  },
  "platforms": {
    "win32": {
      "name": "Windows",
      "controls": "right",
      "titlebar": "windows-style",
      "shortcuts": {
        "reload": "Ctrl+R",
        "newWindow": "Ctrl+Shift+N"
      }
    },
    "darwin": {
      "name": "macOS",
      "controls": "left",
      "titlebar": "mac-style",
      "shortcuts": {
        "reload": "Cmd+R",
        "newWindow": "Cmd+Shift+N"
      }
    },
    "linux": {
      "name": "Linux",
      "controls": "custom",
      "titlebar": "linux-style",
      "shortcuts": {
        "reload": "Ctrl+R",
        "newWindow": "Ctrl+Shift+N"
      }
    }
  }
}
